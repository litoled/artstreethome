<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :user_first_name, required: true %>
    <%= f.input :user_first_name %>
  </div>

  <div class="field">
    <%= f.label :user_last_name, required: true %>
    <%= f.input :user_last_name %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.input :password, required: true %>
  </div>

 <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.input :password_confirmation, required: true %>
  </div>

  <div class="field">
    <%= f.label :artist_name %><br />
    <%= f.input :artist_name %>
  </div>

<!--photo ici-->

  <div class="field">
    <%= f.label :phone_number %><br />
    <%= f.text_field :phone_number, required: true %>
  </div>

  <div class="field">
    <%= f.label :rib %><br />
    <%= f.input :rib, required: true %>
  </div>

  <div class="field">
    <%= f.label :work_area %>
    <!--ICI CHAMP DE RECHERCHE + PLUSIEURS REPONSES POSSIBLES-->
    <%= f.input :work_area, required: true %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description, required: true %>
  </div>

  <div class="field">
    <%= f.label :links %>
    <%= f.input :links %>
  </div>


  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>


